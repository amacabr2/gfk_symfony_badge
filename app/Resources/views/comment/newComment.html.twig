{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">

        <div class="col-lg-8">

            <div class="well">
                <h1>Commentaires</h1>
                {% for comment in comments if comments is not empty%}
                    <p>
                        <strong>{{ comment.user.username }}</strong><br>
                        {{ comment.content }}
                    </p>
                {% else %}
                    <i>Pas de commentaires pour le moment</i>
                {% endfor %}
            </div>


            <h1>Ajouter un commentaire</h1>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">Commenter</button>
            {{ form_end(form) }}
        </div>

        <div class="col-lg-4">
            <h2>Mes badges</h2>
            {% if badges is empty %}
                Vous n'avez pas de badge
            {% else %}
                <ul class="list-group">
                {% for badge in badges %}
                    <li class="list-group-item">{{ badge.name }}</li>
                {% endfor %}
                </ul>
            {% endif %}
        </div>

    </div>

{% endblock %}